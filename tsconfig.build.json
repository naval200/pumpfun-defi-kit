{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "removeComments": false,
    "importHelpers": true
  },
  "include": ["src/**/*", "cli/**/*"],
  "exclude": ["node_modules", "dist", "tests", "debug", "coverage", "examples", "test-batch-e2e", "fixtures", "wallets"]
}
